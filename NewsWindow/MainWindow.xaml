<Window x:Class="NewsWindow.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NewsWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="50">
            <Button Width="150" Height="35" Content="Users" FontSize="20" Command="{Binding UsersSectionCommand}"></Button>
            <Button Width="150" Height="35" Content="News" FontSize="20" Command="{Binding NewsSectionCommand}"></Button>
            <Button Width="150" Height="35" Content="Comments" FontSize="20" Command="{Binding CommentsSectionCommand}"></Button>
        </StackPanel>
    </Grid>
</Window>
